{
	"name": "vifdk",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"postinstall": "bun simple-git-hooks",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"release": "bumpp --commit --push --tag --recursive",
		"test:vifdk": "bun --filter vifdk test",
		"test": "bun test:vifdk",
		"type-check": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@types/bun": "^1.3.1",
		"bumpp": "^10.3.1",
		"bunup": "^0.15.13",
		"prool": "^0.0.25",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0",
		"viem": ">=2.38.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run type-check"
	}
}
