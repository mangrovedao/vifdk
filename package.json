{
	"name": "vifdk",
	"private": true,
	"workspaces": [
		"packages/core",
		"packages/vif-test",
		"packages/vif-ponder-react",
		"packages/vif-react"
	],
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"postinstall": "bun simple-git-hooks",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"release": "bumpp --commit --push --tag --recursive --install",
		"test": "bun test --filter ./packages/vif-test/** --preload ./packages/vif-test/setup.ts",
		"type-check": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@types/bun": "^1.3.1",
		"bumpp": "^10.3.1",
		"bunup": "^0.15.13",
		"prool": "^0.0.25",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3",
		"viem": ">=2.38.0"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run type-check"
	}
}
